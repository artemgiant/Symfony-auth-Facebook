{% extends "cabinet/cabinet_layout.html.twig" %}

{% block title %}{{"Dashboard"|trans }}{% endblock %}

{% block content %}
                        <div class="col-xl-6">
                            <!-- START card-->
                            <div class="card card-default">
                                <div class="card-header"><div class="float-left badge badge-success">{{ "New Orders"|trans }}</div></div>
                                <div class="card-body">
                                    <!-- START table-responsive-->
                                    <div class="table-responsive">
                                        <table class="table table-striped table-bordered table-hover">
                                            <thead>
                                            <tr>
                                                <th>{{ "TN"| trans }}</th>
                                                <th>{{ "shipgCost" | trans }}</th>
                                                <th>{{ "declareValue" | trans }}</th>
                                                <th>{{ "Adress" | trans }}</th>
                                            </tr>
                                            </thead>
                                            <tbody>

                                            {% if ordersNew %}
                                                {% for order in ordersNew %}
                                                    <tr>
                                                        <td>{{ order.trackingNumber }}</td>
                                                        <td>{{ order.shippingCosts }}</td>
                                                        <td>{{ order.declareValue }}</td>
                                                        <td>{{ order.addresses.fullAddress }}</td>
                                                    </tr>
                                                {% endfor %}
                                            {% else %}
                                                <tr><td>{{ "No order" | trans }}</td></tr>
                                            {% endif %}
                                            </tbody>
                                        </table>
                                    </div><!-- END table-responsive-->
                                </div>
                            </div><!-- END card-->
                        </div>
                        <div class="col-xl-6">
                            <!-- START card-->
                            <div class="card card-default">
                                <div class="card-header"><div class="float-left badge badge-success"> Вiдправлення (0)</div></div>
                                <div class="card-body">
                                    <!-- START table-responsive-->
                                    <div class="table-responsive">
                                        <table class="table table-striped table-bordered table-hover">
                                            <thead>
                                                <tr>
                                                    <th>{{ "TN"| trans }}</th>
                                                    <th>{{ "Adress" | trans }}</th>
                                                    <th>{{ "Status" | trans }}</th>
                                                </tr>
                                            </thead>
                                            <tbody>

                                                {% if ordersSend %}
                                                    {% for order in ordersSend %}
                                                        <tr>
                                                            <td>{{ order.trNum }}</td>
                                                            <td>{{ order.addresses.fullAddress }}</td>
                                                            <td>{{ order.orderStatus.statuName| trans }}</td>
                                                        </tr>
                                                    {% endfor %}
                                                {% else %}
                                                    <tr><td>{{ "No order" | trans }}</td></tr>
                                                {% endif %}
                                            </tbody>
                                        </table>
                                    </div><!-- END table-responsive-->
                                </div>
                            </div><!-- END card-->
                        </div>
                        <div class="col-xl-6">
                            <!-- START card-->
                            <div class="card card-default">
                                <div class="card-header"><div class="float-left badge badge-success"> Последние платежи (2)</div></div>
                                <div class="card-body">
                                    <!-- START table-responsive-->
                                    <div class="table-responsive">
                                        <table class="table table-striped table-bordered table-hover">
                                            <thead>
                                            <tr>
                                                <th>{{ 'Nomer scheta'| trans }}</th>
                                                <th>{{ 'Sposob oplaty'| trans }}</th>
                                                <th>{{ 'Sum'| trans }}</th>
                                                <th>{{ 'Status'| trans }}</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            {% if payment %}
                                                {% for item in payment %}
                                                    <tr>
                                                    <tr>
                                                        <td>{{ item.liqpayOrderId }}</td>
                                                        <td>{{ "Card"|trans }}</td>
                                                        <td>{{ item.sum }}</td>
                                                        <td>{{ item.status | trans }}</td>
                                                    </tr>
                                                    </tr>
                                                {% endfor %}
                                            {% else %}
                                                <tr><td>{{ "Not pay yet" | trans }}</td></tr>
                                            {% endif %}
                                            </tbody>
                                        </table>
                                    </div><!-- END table-responsive-->
                                </div>
                            </div><!-- END card-->
                        </div>
{% endblock %}
 {% block javascripts %}{% endblock %}
